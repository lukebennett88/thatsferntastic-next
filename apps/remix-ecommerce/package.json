{
  "name": "@thatsferntastic/remix",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "run-s build:css build:remix",
    "build:remix": "remix build && rollup -c",
    "build:css": "postcss styles/global.css -o app/styles/global.css",
    "clean": "rimraf ./api/_build ./api/index.js ./public/build ./build ./.cache ./node_modules",
    "dev": "pnpm run build:css && run-p dev:*",
    "dev:remix": "PORT=7777 dotenv -- remix dev",
    "dev:css": "postcss styles/global.css -o app/styles/global.css --watch",
    "lint": "TIMING=1 eslint . --fix",
    "postinstall": "remix setup node"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.3",
    "@heroicons/react": "^1.0.5",
    "@reach/auto-id": "^0.16.0",
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "@remix-run/vercel": "^1.1.3",
    "@shopify/shopify-api": "^2.0.0",
    "@thatsferntastic/utils": "*",
    "classnames": "^2.3.1",
    "decimal.js": "^10.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.3",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@tailwindcss/typography": "^0.5.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "autoprefixer": "^10.4.2",
    "cssnano": "^5.0.16",
    "dotenv-cli": "^4.1.1",
    "eslint-preset-thatsferntastic": "*",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "postcss-load-config": "^3.1.1",
    "prettier-plugin-tailwindcss": "0.1.4",
    "prettier-preset-thatsferntastic": "*",
    "rimraf": "^3.0.2",
    "rollup": "^2.63.0",
    "tailwindcss": "^3.0.16",
    "tailwindcss-named-groups": "^0.0.5",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
