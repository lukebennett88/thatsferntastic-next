{
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2021"],
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": { "~/*": ["./app/*"] },
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2019",

    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}
