{
  "name": "@thatsferntastic/root",
  "version": "1.0.0",
  "private": true,
  "author": "Luke Bennett <hello@lukebennett.com.au>",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:store": "turbo run build --scope=@thatsferntastic/store --include-dependencies --no-deps",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "dev:store": "turbo run dev --scope=@thatsferntastic/store",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:nuclear": "git clean -fXd",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "yarn-deduplicate yarn.lock && manypkg check && yarn workspace @thatsferntastic/store ts-gql:build",
    "prepare": "husky install",
    "typecheck": "manypkg exec tsc --noEmit"
  },
  "dependencies": {
    "@manypkg/cli": "^0.19.1",
    "eslint": "^8.5.0",
    "husky": "7.0.4",
    "lint-staged": "12.1.4",
    "prettier": "^2.5.1",
    "turbo": "^1.0.23",
    "yarn-deduplicate": "^3.1.0"
  },
  "engines": {
    "node": ">=14.x",
    "yarn": ">=1.22.0",
    "npm": "please-use-yarn"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          ".next/**",
          "dist/**"
        ]
      },
      "test": {
        "dependsOn": [],
        "outputs": [
          "coverage/**"
        ]
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      },
      "clean": {
        "cache": false
      }
    }
  }
}
