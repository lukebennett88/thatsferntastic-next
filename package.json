{
  "name": "@thatsferntastic/root",
  "description": "Website for @thatsferntastic",
  "version": "1.0.0",
  "private": "true",
  "author": "Luke Bennett <hello@lukebennett.com.au>",
  "scripts": {
    "build": "preconstruct build",
    "clean:check": "git clean -nXd",
    "clean:write": "git clean -fXd",
    "dev:graphql-api": "yarn --cwd=services/graphql-api dev",
    "dev:store": "yarn --cwd=apps/store dev -p 3000",
    "eslint": "eslint --cache --cache-location=node_modules/.cache/.eslintcache --fix",
    "format": "prettier --ignore-path .gitignore \"**/*.+(ts|js|tsx)\" --write --ignore-unknown",
    "lint": "yarn run eslint . --ext .js,.jsx,.ts,.tsx",
    "postinstall": "npx yarn-deduplicate yarn.lock && preconstruct dev && manypkg check && ts-gql build",
    "prepare": "husky install",
    "ts-gql:build": "ts-gql build",
    "ts-gql:watch": "ts-gql watch",
    "typecheck": "manypkg exec tsc --noEmit"
  },
  "dependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.15.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@manypkg/cli": "^0.19.1",
    "@preconstruct/cli": "^2.1.5",
    "@preconstruct/eslint-plugin-format-js-tag": "^0.2.0",
    "@ts-gql/babel-plugin": "^0.1.0",
    "@ts-gql/compiler": "^0.15.0",
    "@ts-gql/eslint-plugin": "^0.8.0",
    "@ts-gql/next": "^16.0.0",
    "@ts-gql/tag": "^0.6.0",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "8.4.1",
    "eslint-config-next": "12.0.7",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "graphql": "^15.6.1",
    "husky": "7.0.4",
    "lint-staged": "12.1.2",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.5.3"
  },
  "engines": {
    "node": ">=14.x",
    "yarn": ">=1.22.0",
    "npm": "please-use-yarn"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "ts-gql": {
    "schema": "apps/store/schema.graphql",
    "mode": "no-transform"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "services/*"
  ]
}
