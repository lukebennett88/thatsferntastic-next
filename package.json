{
  "name": "@thatsferntastic/root",
  "version": "1.0.0",
  "private": true,
  "author": "Luke Bennett <hello@lukebennett.com.au>",
  "scripts": {
    "build": "turbo run build",
    "build:store": "turbo run build --scope=@thatsferntastic/store --include-dependencies --no-deps",
    "build:remix": "turbo run build --scope=@thatsferntastic/remix --include-dependencies --no-deps",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "dev:store": "turbo run dev --scope=@thatsferntastic/store",
    "dev:remix": "turbo run dev --scope=@thatsferntastic/remix",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:nuclear": "git clean -fXd",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "manypkg check && pnpm recursive run ts-gql:build --filter @thatsferntastic/store",
    "prepare": "husky install",
    "typecheck": "turbo run typecheck"
  },
  "dependencies": {
    "@manypkg/cli": "^0.19.1",
    "eslint": "^8.7.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.1",
    "prettier": "^2.5.1",
    "turbo": "^1.0.29"
  },
  "engines": {
    "node": ">=14.x",
    "yarn": "please-use-pnpm",
    "npm": "please-use-pnpm",
    "pnpm": "6.28.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "packageManager": "pnpm@6.28.0",
  "volta": {
    "node": "14.18.2",
    "yarn": "1.22.17"
  }
}
