{
  "name": "@thatsferntastic/root",
  "version": "1.0.0",
  "private": true,
  "author": "Luke Bennett <hello@lukebennett.com.au>",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:blog": "turbo run build --scope=blog --include-dependencies --no-deps",
    "build:store": "turbo run build --scope=@thatsferntastic/store --include-dependencies --no-deps",
    "build:remix": "turbo run build --scope=@thatsferntastic/remix --include-dependencies --no-deps",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "dev:blog": "turbo run dev --scope=blog",
    "dev:store": "turbo run dev --scope=@thatsferntastic/store",
    "dev:remix": "turbo run dev --scope=@thatsferntastic/remix",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:nuclear": "git clean -fXd",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "yarn-deduplicate yarn.lock && manypkg check && yarn workspace @thatsferntastic/store ts-gql:build",
    "prepare": "husky install",
    "typecheck": "turbo run typecheck"
  },
  "dependencies": {
    "@manypkg/cli": "^0.19.1",
    "eslint": "^8.8.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.2",
    "prettier": "^2.5.1",
    "turbo": "^1.1.1",
    "yarn-deduplicate": "^3.1.0"
  },
  "engines": {
    "node": ">=14.x",
    "yarn": ">=1.22.0",
    "npm": "please-use-yarn"
  },
  "lint-staged": {
    "**/*.{ts,tsx,md}": "prettier --write --ignore-unknown"
  },
  "volta": {
    "node": "14.18.2",
    "yarn": "1.22.17"
  },
  "packageManager": "yarn@1.22.17"
}
